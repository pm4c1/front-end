/* html 부분 */
html {
    box-sizing: border-box;
    height: 100%;
}

/* 전체, 전체brfore, 전체after */
*,
*::before,
*::after {
    box-sizing: inherit;
    margin: 0;
    padding: 0;
}

/* 바디 부분 */
body {
    align-items: center;
    background: linear-gradient(320deg, #eb92be, #ffef78, #63c9b4);
    display: flex;
    font-family: 'Dosis', sans-serif;
    font-display: swap;
    height: inherit;
    justify-content: center;
}

/* div = 클래스 wrapper 부분 */
.wrapper {
    backdrop-filter: blur(5.5px);
    -webkit-backdrop-filter: blur(5.5px);
    background: rgba(255, 255, 255, 0.75);
    border: 1px solid rgba(255, 255, 255, 0.01);
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(35, 35, 35, 0.1);
    color: #232323;
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    background: rgba(255, 255, 255, 0.30);
    border: 1px solid rgba(255, 255, 255, 0.34);
    flex-basis: 400px;
    height: 540px;
    padding: 20px 35px;
}

/* section = 클래스 screen 부분 */
.screen {
    backdrop-filter: blur(5.5px);
    -webkit-backdrop-filter: blur(5.5px);
    background: rgba(255, 255, 255, 0.75);
    border: 1px solid rgba(255, 255, 255, 0.01);
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(35, 35, 35, 0.1);
    color: #232323;
    font-size: 35px;
    overflow: auto;
    padding: 20px;
    text-align: right;
    width: 326px;
}

/* div = 클래스 버튼 열 부분 */
.calc-button-row {
    display: flex;
    justify-content: space-between;
    margin: 5% 0;
}

/* button = 클래스 버튼 부분 */
.calc-button {
    backdrop-filter: blur(5.5px);
    -webkit-backdrop-filter: blur(5.5px);
    background: rgba(255, 255, 255, 0.75);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(35, 35, 35, 0.1);
    color: #232323;
    flex-basis: 20%;
    font-family: 'inherit';
    font-size: 24px;
    height: 65px;
}

/* button = 클래스 버튼의 막내 부분 */
.calc-button:last-child {
    backdrop-filter: blur(5.5px);
    -webkit-backdrop-filter: blur(5.5px);
    background: rgba(255, 255, 255, 0.75);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(35, 35, 35, 0.1);
    color: white;
    background: #f3a735;
}

/* button = 클래스 버튼의 막내 맴도는? 부분 */
.calc-button:last-child:hover {
    background-color: inherit;
    color: inherit;
}

/* button = 클래스 버튼의 맴도는? 부분 */
.calc-button:hover {
    background-color: inherit;
}

/* button = 클래스 버튼의 유효한? 부분 */
.calc-button:active {
    background-color: #f3a735;
}

/* button = 클래스 double 부분 */
.double {
    flex-basis: 47%;
}

/* button = 클래스 triple 부분 */
.triple {
    flex-basis: 73%;
}
